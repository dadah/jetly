<div class='mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2'>
  <div class='panel panel-info'>
    <div class='panel-heading'>
      <div class='panel-title'>Log In</div>
    </div>
    <div class='panel-body'>
      <%= form_tag admin_sessions_path, method: :post, class: 'form-horizontal' do |f| %>
        <div class="input-group">
          <span class="input-group-addon">
            <i class="fa fa-user"></i>
          </span>
          <%= text_field_tag :email, '', placeholder: 'email', class: 'form-control' %>
        </div>
        <div class="input-group">
          <span class="input-group-addon">
            <i class="fa fa-lock"></i>
          </span>
          <%= password_field_tag :password, '', placeholder: 'password', class: 'form-control' %>
        </div>
        <div style="margin-top:10px" class="form-group">
          <div class="col-sm-12 controls">
            <%= submit_tag "Login", class: "btn btn-success" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
